/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
}

.userinfo {
  margin-top: 40rpx;
  height: 400rpx;
  width: 100%;
  background:rgb(166, 114, 214);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 60%;
}

.userinfo-nickname {
   color: whitesmoke;
}

.mine-tab {
  height: 50px;
  width: 100%;
  border: 1px solid rgba(0, 0, 0, 0.1);
  margin-top: 10px;
}

.mine-tab-text {
  font-size: 18px;
  font-weight: 400;
  padding-left: 20px;
  padding-top: 10px;
  display: flex;
  float: left;
}

.mine-tab-img {
  width: 27px;
  height: 27px;
  display: flex;
  float: right;
  margin-top: 10px;
  padding-right: 15px;
}

.icon-box-img {
  display: flex;
  float: left;
  margin-top: 10px;
  margin-left: 10px;
}